<!DOCTYPE html>
<html>

<head>
    <title>f10w3r_wargame</title>
    <meta charset="utf-8">
    <style id="theme-color">
        body {
            background-color: #121212;
            color: white;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: white;
            font-size: 36px;
            margin-bottom: 20px;
        }

        h2 {
            color: #888;
            font-size: 20px;
            margin-top: 5px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            padding: 10px 50px;
            background-color: #222;
            position: relative;
        }

        input[type="text"] {
            width: 70%;
            padding: 12px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #333;
            color: #f5f5f5;
            transition: background-color 0.3s, border-color 0.3s;
            height: 48px;
            box-sizing: border-box;
        }

        input[type="text"]:focus {
            background-color: #444;
            border-color: #f5f5f5;
            outline: none;
        }

        button[type="submit"] {
            background-color: #444;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            cursor: pointer;
            height: 48px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s, border-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #aaa;
        }

        .dropdown-content {
            display: none;
            flex-direction: column;
            background-color: #222;
            opacity: 0.8;
            width: 100%;
            text-align: center;
            position: absolute;
            left: 50%;
            transform: translate(-50%, 10px);
            z-index: 1;
        }

        .dropdown-content a {
            color: white;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;
        }

        .dropdown-content a:hover {
            background-color: #3a3a3a;
        }

        .dropdown.active .dropdown-content {
            display: flex;
        }

        .dropdown button {
            padding: 10px 40px;
            background-color: #222;
            color: white;
            border: none;
            cursor: pointer;
        }

        .brand {
            color: white;
            text-decoration: none;
            font-size: 24px;
        }

        .content {
            background-color: #1e1e1e;
            padding: 20px;
            margin: 40px auto;
            max-width: 800px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        .content h1 {
            font-size: 32px;
            margin-bottom: 15px;
        }

        .content p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
            color: #ddd;
        }

        .content .meta {
            display: flex;
            justify-content: space-between;
            color: #888;
            font-size: 16px;
        }

        .content .meta .author {
            font-weight: bold;
        }

        .time {
            color: #aaa;
            font-size: 16px;
        }

        .comments-section {
            margin-top: 40px;
        }

        .comments-section h3 {
            font-size: 24px;
            margin-bottom: 15px;
            color: #fff;
        }

        .comment {
            background-color: #2a2a2a;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .comment .author {
            font-weight: bold;
            color: #aaa;
        }

        .comment p {
            margin: 10px 0;
        }

        .comment-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

        .comment-form textarea {
            width: 80%;
            height: 80px;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 8px;
            border: 1px solid #444;
            background-color: #333;
            color: white;
            resize: none;
        }

        .comment-form button {
            background-color: #444;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .comment-form button:hover {
            background-color: #aaa;
        }

        .difficulty-vote {
            margin-top: 20px;
            display: flex;
            justify-content: space-around;
        }

        .difficulty-vote button {
            background-color: #444;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .difficulty-vote button:hover {
            background-color: #aaa;
        }

        hr {
            border: 0;
            border-top: 1px solid #444;
            margin: 20px 0;
        }

        .file-download-btn {
            display: block;
            background-color: #333;
            color: white;
            border: 1px solid #555;
            padding: 12px 20px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            width: 660px;
            margin: 0 auto;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }

        .file-download-btn:hover {
            background-color: #444;
            border-color: #888;
        }

        .Submit-btn {
            display: inline-block;
            background-color: #333;
            color: white;
            border: 1px solid #555;
            padding: 12px 20px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }

        .Submit-btn:hover {
            background-color: #444;
            border-color: #888;
        }

        .centered {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .difficulty-vote-section {
            background-color: #1e1e1e;
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .difficulty-vote-section h2 {
            color: #fff;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .difficulty-vote-section h3 {
            color: #888;
            font-size: 18px;
            margin-top: 15px;
        }

        .vote-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-top: 10px;
        }

        .vote-buttons button {
            background-color: #444;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .vote-buttons button:hover {
            background-color: #aaa;
        }

        #selected-level {
            color: #aaa;
            font-weight: bold;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dropdownButton = document.querySelector('.dropdown button');
            const dropdownMenu = document.querySelector('.dropdown');
            dropdownButton.addEventListener('click', function () {
                dropdownMenu.classList.toggle('active');
            });
        });
    </script>
</head>

<body>
    <nav>
        <div>
            <a href="/" class="brand">f10w3r_wargame</a>
        </div>
        <div class="dropdown">
            <button type="button">
                Menu ▿
            </button>
            <div class="dropdown-content">
                <a href="/user">Users</a>
                <a href="/wargame">Wargame</a>
                <a href="/wargame/upload">Upload</a><br>
                <a href="/login">Login</a>
                <a href="/logout">Logout</a>
                <a href="/signup">Signup</a>
            </div>
        </div>
    </nav>

    <div class="content">
        <h1><%= posts.problemContent.title %></h1>

        <div class="meta">
            <span class="author">By: <%= posts.userId.id %></span>
            <span class="date-time">
                <%= new Date(posts.problemContent.pro_time).toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' }) %> 
                <%= new Date(posts.problemContent.pro_time).toLocaleTimeString('ko-KR', { hour: '2-digit', minute: '2-digit' }) %>
            </span>
        </div>
        <hr>
        <p><%= posts.problemContent.text %></p><br>

        <form method="post" style="margin-top: 20px;">
            <button class="file-download-btn" onclick="window.location.href='<%= '../../download/' + posts.problemContent.file %>'" type="button">Download File</button>
        </form>

        <form method="post" style="margin-top: 20px;">
            <div class="centered">
                <input type="text" name="flag" placeholder="Enter flag" required class="small-input">
                <input type="hidden" name="score" value="<%= posts.problemContent.score %>">
                <button type="submit" class="Submit-btn">Submit</button>
            </div>
        </form>
    </div>

 <!-- 난이도 섹션 -->
<% let level = posts.difficulty %>
<div class="content difficulty-vote-section">
    <h2>Level : <span id="level-display"><%= level %></span></h2>

    <form method="post" action="./problem/vote">
        <div class="vote-buttons">
            <button type="button" id="minus">-</button>
            <h3>선택한 난이도: <span id="selected-level">없음</span></h3>
            <button type="button" id="plus">+</button>
        </div>

        <input type="hidden" name="difficulty" id="difficulty" value="0">
        <input type="hidden" name="page" value="<%= posts.problemContent.pro_idx %>">
        
        <div>
            <button type="submit" class="">vote</button>
        </div>
    </form>
</div>

<script>
    let voteLevel = 0;
    const selectedLevel = document.getElementById('selected-level');
    const difficultyInput = document.getElementById('difficulty');  // hidden input

    document.getElementById('minus').addEventListener('click', () => {
        voteLevel = Math.max(0, voteLevel - 1);  
        selectedLevel.textContent = voteLevel === 0 ? '없음' : voteLevel; 
        difficultyInput.value = voteLevel;  
    });

    document.getElementById('plus').addEventListener('click', () => {
        voteLevel = Math.min(10, voteLevel + 1);  
        selectedLevel.textContent = voteLevel; 
        difficultyInput.value = voteLevel;
    });
</script>


    <!-- 댓글 섹션 -->
    <div class="content">
        <div class="comments-section">
            <div class="comments-list">
                <!-- 댓글이 여기에 동적으로 추가됩니다 -->
            </div>

            <form method="post">
                <div class="comment-form">
                    <textarea placeholder="Enter your comment..."></textarea><br>
                    <button type="submit" class="Submit-btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
