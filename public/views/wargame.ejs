<!DOCTYPE html>
<html>

<head>
    <title>f10w3r_wargame</title>
    <meta charset="utf-8">
    <style id="theme-color">
        body {
            background-color: black;
            color: white;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
            color: white;
            margin-top: 50px;
            font-size: 32px;
        }
        nav {
            display: flex;
            justify-content: space-between;
            padding: 10px 50px;
            background-color: #222;
            position: relative;
        }
        .dropdown-content {
            display: none;
            flex-direction: column;
            background-color: #222;
            opacity: 0.8;
            width: 100%;
            text-align: center;
            position: absolute;
            left: 50%;
            transform: translate(-50%, 10px);
            z-index: 1;
        }
        .dropdown-content a {
            color: white;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;
        }
        .dropdown-content a:hover {
            background-color: #3a3a3a;
        }
        .dropdown.active .dropdown-content {
            display: flex;
        }
        .dropdown button {
            padding: 10px 40px;
            background-color: #222;
            color: white;
            border: none;
            cursor: pointer;
        }
        .brand {
            color: white;
            text-decoration: none;
            font-size: 24px;
        }
        /* 컨테이너 스타일 */
  /* 컨테이너 스타일 */
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* 버튼들을 가로로 중앙 정렬 */
            align-items: center; /* 버튼들을 세로로 중앙 정렬 */
            margin: 20px auto;
            max-width: 1200px;
            padding: 0 20px;
        }

        /* 버튼 스타일 */
        .container button {
            width: 120px;
            height: 90px;
            font-size: 20px;
            background-color: #333;
            color: white;
            border: 1px solid #444;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin: 10px;
            border-radius: 10px;
            transition: background-color 0.3s, transform 0.2s;
        }
        .container button:hover {
            background-color: #444;
            transform: translateY(-5px);
        }
        /* 버튼 텍스트 스타일 */
        .button-title {
            padding: 10px;
        }
        /* 반응형 디자인 */
        @media (max-width: 768px) {
            .container button {
                width: 100%;
                height: auto;
            }
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dropdownButton = document.querySelector('.dropdown button');
            const dropdownMenu = document.querySelector('.dropdown');

            dropdownButton.addEventListener('click', function () {
                dropdownMenu.classList.toggle('active');
            });
        });
    </script>
</head>

<body>
    <nav>
        <div>
            <a href="/" class="brand">f10w3r_wargame</a>
        </div>
        <div class="dropdown">
            <button type="button">
                Menu ▿
            </button>
            <div class="dropdown-content">
                <a href="/user">Users</a>
                <a href="/wargame">Wargame</a>
                <a href="/wargame/upload">Upload</a><br>
                <a href="/login">Login</a>
                <a href="/logout">Logout</a>
                <a href="/signup">Signup</a>
            </div>
        </div>
    </nav>

    <h1>Wargame List</h1>

    <% var count = posts.count; %>

    <% for (var i = 0; i < count; i++) { %>
        <% if (i % 5 === 0 && i !== 0) { %> 
            </div>
        <% } %>
    
        <% if (i % 5 === 0) { %> 
            <div class="container">
        <% } %>
    

            <button onclick="location.href='/wargame/problem?page=<%= posts.content[i].pro_idx %>'">
                <%= posts.content[i].title %>
            </button>

    
    <% } %>
    
    <% if (count % 5 !== 0) { %> 
        </div> 
    <% } %>

</body>

</html>
